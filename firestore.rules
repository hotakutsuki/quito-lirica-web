rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Presentation Requests Collection
     *
     * This collection acts as a secure "dropbox". Any user (authenticated or not)
     * can submit a new presentation request.
     *
     * Only authenticated users (admins) can read or update the list of requests.
     * This ensures user privacy and data integrity, while allowing admin access
     * to manage the requests (e.g., mark as viewed).
     */
    match /presentationRequests/{presentationRequestId} {
      /**
       * @allow_create
       *   - Any user can submit a new presentation request.
       *   - This is essential for the public-facing contact form.
       * @allow_list_read
       *   - Only authenticated users can list and read the requests.
       * @deny_write
       *   - No client can update or delete a request.
       */
      allow create: if true;
      allow list, read: if request.auth != null;
      allow write: if false;
    }
  }
}
